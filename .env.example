# ==================================
# MS-FORUM Environment Variables
# ==================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# ----------------------------------
# Database Configuration
# ----------------------------------
# MongoDB connection URI
# For MongoDB Atlas (production): mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
# For local MongoDB: mongodb://localhost:27017/ms_forum
MONGO_URI=mongodb://german:XXxxAAW#Q.southamerica-west1.firestore.goog:443/ms-forum?loadBalanced=true&tls=true&authMechanism=SCRAM-SHA-256&retryWrites=false

# ----------------------------------
# Security
# ----------------------------------
# Secret key for JWT token validation
# Generate a secure random string for production
# Example generation: openssl rand -hex 32
JWT_SECRET_KEY=your_secret_key_here_change_in_production

# ----------------------------------
# Server Configuration
# ----------------------------------
# Port for the application to listen on
# Google Cloud Run will automatically set this to 8080
# For local development, you can use 8000 or any other port
# PORT=8000

# ----------------------------------
# Environment
# ----------------------------------
# Uncomment and set to 'production' in production environments
# ENV=development
